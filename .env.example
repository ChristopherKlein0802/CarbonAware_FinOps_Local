# Carbon Intensity API Configuration
CARBON_API_PROVIDER=watttime  # Options: watttime, electricitymap

# WattTime API (if using WattTime)
WATTTIME_USERNAME=your_username_here
WATTTIME_PASSWORD=your_password_here

# ElectricityMap API (if using ElectricityMap)
ELECTRICITYMAP_API_KEY=your_api_key_here

# AWS Configuration
AWS_REGION=eu-central-1
AWS_PROFILE=default

# Project Configuration
PROJECT_NAME=carbon-aware-finops
ENVIRONMENT=development

# Scheduling Configuration
SCHEDULE_CHECK_INTERVAL=15  # minutes
CARBON_THRESHOLD=400  # gCO2/kWh

# Notification Configuration
NOTIFICATION_EMAIL=ch.klein@reply.de
SLACK_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/carbon-finops.log

# Cost Optimization Targets
TARGET_COST_REDUCTION=20  # percentage
TARGET_CARBON_REDUCTION=25  # percentage